pidfile = "/var/run/mackerel-agent.pid"
root = "/var/lib/mackerel-agent"
verbose = false
apikey = "<%= @apikey %>"

[host_status]
on_start = "working"
on_stop  = "poweroff"

[plugin.metrics.linux]
command = "mackerel-plugin-linux"
type = "metric"

[plugin.metrics.mysql]
command = "mackerel-plugin-mysql -username=<%= @mysql_username %> -password=<%= @mysql_password %>"

